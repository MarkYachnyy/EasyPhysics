<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.task_fragments.FormulaConstructorTaskFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_blue">

        <TextView
            android:id="@+id/fragment_formula_constructor_task.exercise_tv"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:paddingTop="30dp"
            android:background="@color/dark_blue_pastel"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="[exercise]"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_formula_constructor_task.value_symbol_tv"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:text="Val"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:text="="/>
            <FrameLayout
                android:id="@+id/fragment_formula_constructor_task.fraction_fl"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6">
                <LinearLayout
                    android:id="@+id/fragment_formula_constructor_task.fraction_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/fragment_formula_constructor_task.numerator_ll"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_formula_constructor_task.components_ll"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:background="@color/dark_blue_pastel"
            android:orientation="horizontal"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/fragment_formula_constructor_task.info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_info_30"
        android:backgroundTint="@color/transparent"/>
</FrameLayout>
