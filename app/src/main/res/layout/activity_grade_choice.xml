<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.myitschool.vsu2021.markyachnyj.the_project.graphics.Views.StaticBGView
        android:id="@+id/activity_grade_choice.bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/light_blue">
            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Список Классов"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"/>
            <ImageButton
                android:id="@+id/activity_grade_choice.settings_btn"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_settings_45"
                android:backgroundTint="@color/transparent"/>
        </LinearLayout>
        <ListView
            android:id="@+id/activity_grade_choice.list"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="11"
            android:dividerHeight="0sp"
            android:divider="@color/transparent"
            android:scrollbarSize="0sp"/>
    </LinearLayout>
    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/activity_grade_choice.fading_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "@color/semitransparent_black"
        android:visibility="gone"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/activity_grade_choice.grade_info_fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="3"/>
    </LinearLayout>
</FrameLayout>