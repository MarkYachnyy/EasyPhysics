<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestSolverActivity">
    <ru.myitschool.vsu2021.markyachnyj.the_project.graphics.Views.StaticBGView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/activity_test_solver.task_fragment_holder"
            android:layout_margin="5sp"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background = "@color/light_blue">
            <Button
                android:layout_marginLeft="@dimen/activity_test_solver.next_previous_task_btn_margin_sides"
                android:layout_marginRight="@dimen/activity_test_solver.next_previous_task_btn_margin_sides"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_blue"/>
            <HorizontalScrollView
                android:scrollbarSize="0sp"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:layout_marginLeft="@dimen/activity_test_solver.next_previous_task_btn_margin_sides"
                android:layout_marginRight="@dimen/activity_test_solver.next_previous_task_btn_margin_sides"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_blue"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>